<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="transactionManager" class="org.springframework.data.marklogic.MarkLogicTransactionManager">
        <constructor-arg name="client" ref="client"/>
    </bean>

    <bean id="client" class="org.springframework.data.marklogic.core.MarkLogicClientFactoryBean">
        <property name="host" value="127.0.0.1"/>
        <property name="port" value="8000"/>
        <property name="securityContext">
            <bean class="com.marklogic.client.DatabaseClientFactory$DigestAuthContext">
                <constructor-arg value="admin"/>
                <constructor-arg value="admin"/>
            </bean>
        </property>
    </bean>

    <bean id="markLogicTemplate" class="org.springframework.data.marklogic.core.MarkLogicTemplate">
        <constructor-arg name="client" ref="client"/>
    </bean>

</beans>